= form_for [:admin, @user, @invoice] do |f|
  = f.error_messages
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :description
    %br
    = f.text_area :description
  %p
    = f.label :amount
    %br
    = f.text_field :amount
  %p
    = f.label :date
    %br
    = f.datetime_select :date
  %p
    = f.submit